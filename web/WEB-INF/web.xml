<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>admin</filter-name>
        <filter-class>com.ylsislove.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>admin</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>user</filter-name>
        <filter-class>com.ylsislove.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>user</filter-name>
        <url-pattern>/teacher/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>research</filter-name>
        <filter-class>com.ylsislove.filter.ResearchFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>research</filter-name>
        <url-pattern>/research/*</url-pattern>
    </filter-mapping>

</web-app>